<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjsTema8.FlexLayout"
             Title="FlexLayout">

    <FlexLayout Direction="Column" Wrap="NoWrap">
        <Label
            x:Name="lblHeader"
            Text="HEADER"
            BackgroundColor="Cyan"
            HorizontalTextAlignment="Center"
            />
        <FlexLayout FlexLayout.Grow="1">
            <Label
                FlexLayout.Basis="10%" BackgroundColor="Blue"/>
            <Label
                FlexLayout.Basis="Auto" BackgroundColor="Grey" Text="CONTENT" FlexLayout.Grow="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label
                FlexLayout.Basis="10%" BackgroundColor="Green"/>
        </FlexLayout>
        <Label
            x:Name="lblFooter"
            Text="FOOTER"
            BackgroundColor="RosyBrown"
            HorizontalTextAlignment="Center"
            />
    </FlexLayout>
</ContentPage>