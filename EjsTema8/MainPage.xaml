<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjsTema8.MainPage">
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Border Stroke="Purple" Padding="25" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" StrokeThickness="20">

            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
                <Button x:Name="Button" Text="FlexLayout" Padding="10" BorderColor="Black" BorderWidth="5" WidthRequest="150" Margin="5" Clicked="Button_Clicked"></Button>
                <Button x:Name="Button_2" Text="AbsoluteLayout" WidthRequest="150" Margin="5" Clicked="Button_2_Clicked"></Button>
                <Button x:Name="Button_3" Text="VariosLayouts" WidthRequest="150" Margin="5" Clicked="Button_3_Clicked"></Button>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="Name: " Margin="0,0,15,0"></Label>
                    <Entry WidthRequest="200"></Entry>
                </StackLayout>
            </StackLayout>

        </Border>

    </StackLayout>


</ContentPage>
